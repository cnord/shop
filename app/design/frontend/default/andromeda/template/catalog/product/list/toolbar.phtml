<?php
/**
 * Product list toolbar
 *
 * @see Mage_Catalog_Block_Product_List_Toolbar
 */
?>
    <?php if( $this->isExpanded() ): ?>
            <div class="sort-by">
                <h4><?php echo $this->__('Sort by') ?> </h4>
				<ul>
                <?php foreach($this->getAvailableOrders() as $_key=>$_order): ?>
					<?php if($_key=='position'):?>
					<?php else: ?>
                    <li <?php if($this->isOrderCurrent($_key)): ?> class="selected"<?php endif; ?>> <a href="
					<?php if($_key=='name'):?>
						<?php	echo $this->getOrderUrl($_key, 'asc')?>
					<?php else: ?>
						<?php echo $this->getOrderUrl($_key, 'desc') ?> <?php endif; ?>">
						<?php if($_key=='price'):?>
						<?php echo $this->__('For price') ?>
						<?php else: ?>
						<?php echo $_order ?>
						<?php endif; ?>
						</a>
						
                    </li>
					<?php endif; ?>
                <?php endforeach; ?>
				</ul>
            </div>
    <?php endif; ?>